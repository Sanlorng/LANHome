<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="toolbarStyle">@style/ActionBar</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="actionMenuTextColor">?attr/colorPrimary</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>
    <style name="popMenu" parent="Widget.AppCompat.PopupMenu" >
        <item name="showAsAction">always</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>
    <style name="ActionBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="popupMenuStyle">@style/popMenu</item>
        <item name="popupTheme">@style/popMenu</item>
        <item name="actionMenuTextColor">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">?attr/colorPrimary</item>
    </style>
    <style name="text_info_card">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
